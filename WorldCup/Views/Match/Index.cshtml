@model IEnumerable<WorldCup.Model.MatchModel>
@using WorldCup.Model;
@{
    ViewBag.Title = "Index";
}

<h2>Matches</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KickOff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeTeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AwayTeamName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.KickOff)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeTeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayTeamName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
